<h2>Complete Register</h2>

<%= form_for(@user, url: complete_non_admin_registration_path, html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
    <%= f.label :name %><br /> 
    <%= f.text_field :name, autocomplete: "name" %>
  </div>
  
  <div class="field">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname, autocomplete: "lastname" %>
  </div>
  
  <input type=hidden name="user[confirmation_token]" value=<%= "#{@user.confirmation_token}" %>> 
  
  <h2> Organization: <%= "#{@organization.name}" %> </h2>

  <div class="actions">
    <%= f.submit "Complete Register" %>
  </div>
<% end %>
